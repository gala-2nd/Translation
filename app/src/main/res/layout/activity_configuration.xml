<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Configuration">

    <TextView
        android:id="@+id/tv_auth_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_auth_key"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:background="#FFFFFF"
        android:textSize="20sp"
        android:text="Your Auth Key" />

    <EditText
        android:id="@+id/et_auth_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_save"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:hint="auth_key"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:text="Save" />

        <TextView
            android:id="@+id/tv_usage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_save"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:text="Usage:"
            android:textStyle="bold"
            />
    <TextView
        android:id="@+id/tv_usage_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_usage_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:background="#FFFFFF"
        android:textSize="20sp"
        android:text="null/null" />

    <Button
        android:id="@+id/btn_add_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add default key for test"
        android:textSize="10sp"
        />
</RelativeLayout>